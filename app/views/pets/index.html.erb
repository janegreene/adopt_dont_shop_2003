<h1>All Pets</h1>

<% @pets.each do |pet| %>
  <%= image_tag pet.image, id: "pet-avatar-#{pet.id}"%>
  <h2> <%= pet.name %> </h2>
  <h2><%= pet.approximate_age %></h2>
  <h2><%= pet.sex %></h2>
  <h2><%= pet.shelter.name %></h2>
  <h2><%= link_to "#{pet.name}", "/pets/#{pet.id}" %></h2>
  <h2><%= link_to "Edit #{pet.name}", "/pets/#{pet.id}/edit"%></h2>
<% end %>
