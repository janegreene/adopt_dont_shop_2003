<header>
  <h1> Adopt Don't Shop </h1>
<ul>
    <li><a class="big_link" href="/pets">All Pets</a></li>
    <li><a class="big_link" href="/shelters">All Shelters</a></li>
</ul>
</header>
<div class="main">
<%= image_tag @pet.image, id: "pet-avatar-#{@pet.id}"%>
<h1> <%= @pet.name %> </h1>
  <h2><%= @pet.description %></h2>
  <h2><%= @pet.approximate_age %></h2>
  <h2><%= @pet.adoption_status %></h2>
  <h3><%= link_to "Update Pet", "/pets/#{@pet.id}/edit"%></h3>
<%= button_to "Delete Pet", "/pets/#{@pet.id}", method: :delete %>
</div>
